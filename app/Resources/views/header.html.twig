<div class="top-bar">
    <div class="row">
        <div class="top-bar-left">
            <ul class="menu">
                <li class="menu-text"><a href="{{ path('index_page') }}">Filibra</a></li>
                <li class="menu-text{% if app.request.attributes.get('_route') == 'index_page' %} active{% endif %}"><a href="{{ path('index_page') }}">Home</a></li>
                <li class="menu-text{% if app.request.attributes.get('_route') == 'challenge_list_page' %} active{% endif %}"><a href="{{ path('challenge_list_page') }}">Challenges</a></li>
                {% if app.user %}
                    <li class="menu-text{% if app.request.attributes.get('_route') == 'profile_page' %} active{% endif %}"><a href="{{ path('profile_page') }}">Profile</a></li>
                {% endif %}
            </ul>
        </div>
        <div class="top-bar-right">
            <ul class="menu">
                {% if app.user %}
                    <li>
                        <a class="button" href="{{ path('logout_action') }}">Logout</a>
                    </li>
                {% else %}
                    <li class="login-option">
                        <a class="button" href="{{ facebook_login_url }}">Login with Facebook</a>
                    </li>
                    <li class="login-option">
                        <a class="button" href="{{ instagram_login_url }}">Login with Instagram</a>
                    </li>
                {% endif %}
            </ul>
        </div>
    </div>
</div>