<div class="medium-6 large-4 columns">
    <div class="challenge">
        <img class="challenge-thumbnail">
        <div class="challenge-details">
            <a class="challenge-link" href="{{ path('challenge_page', {'slug': challenge.slug}) }}">
                <h3 class="challenge-hashTag">
                    <span class="challenge-hash">#</span><span class="challenge-tag">{{ challenge.hashTag|slice(1) }}</span>
                </h3>
            </a>
            <div class="challenge-detail detail row">
                <div class="detail-name medium-6 columns">
                    <span class="detail-icon">
                        <i class="fa fa-clock-o"></i>
                    </span>
                    <time datetime="{{ challenge.finishDate|date("c") }}" class="detail-value">{{ challenge_datediff
                        (challenge) }}</time>
                </div>
                <div class="detail-name medium-6 columns text-right">
                    <span class="detail-icon">
                        <i class="fa fa-euro"></i>
                    </span>
                    <span class="detail-value">{{ challenge.prize|currency }}</span>
                </div>
            </div>
        </div>
    </div>
</div>
